<section class="clux-community">
  <h2>{{ section.settings.title }}</h2>
  <p>{{ section.settings.body }}</p>

  <div class="clux-actions">
    <a class="clux-glass-btn" href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener">
      Follow us on TikTok
    </a>

    <a class="clux-glass-btn" href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener">
      Follow us on Instagram
    </a>
  </div>
</section>

{% schema %}
{
  "name": "C-LUXURY Community",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Join our community" },
    { "type": "text", "id": "body", "label": "Body", "default": "To receive more information on our brand growth every day" },
    { "type": "url", "id": "tiktok_url", "label": "TikTok URL", "default": "https://www.tiktok.com/@_cluxury" },
    { "type": "url", "id": "instagram_url", "label": "Instagram URL", "default": "https://www.instagram.com/_cluxury0" }
  ],
  "presets": [{ "name": "C-LUXURY Community" }]
}
{% endschema %}
